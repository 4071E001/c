/* 計算2.11的5次方 */
#include <stdio.h>
#include <stdlib.h>
double power_for(double, int);	
int main(void)
{
   double x;		
   int n;		

   printf("請輸入你要的計算內容:");	
   scanf("%lf,%d",&x,&n); 	
   printf("這是使用for loop完成的結果");
   printf("%lf的%d次方是%lf\n",x,n,power_for(x,n)); 

   system("pause");
   return 0;
}

double power_for(double base, int n)   
{
   int i;
   double pow=1.0;
   for(i=1;i<=n;i++)		
    pow=pow*base;
   return pow;
}
