/* for迴圈 */
#include <stdio.h>
#include <stdlib.h>
int main(void)
{
   int i, sum=0;
   for(i=1;i<=401;i+=4)			
   	sum+=i;
    printf("1+5+9+...+401=%d\n",sum);
   
   system("pause");
   return 0;
}


/* while迴圈 */
#include <stdio.h>
#include <stdlib.h>
int main(void)
{
   int i=1, sum=0;
   while(i<=401)
   {		
    sum+=i;
    i+=4;
   }
   
   printf("1+5+9+...+401=%d\n",sum);
   system("pause");
   return 0;
}
