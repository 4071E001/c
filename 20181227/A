A-1
#include <stdio.h> 
#include <stdlib.h>
int main(void)
{
    int i,a[5]={11,22,33,44,55},max=a[0],min=a[0];
   
    for (i=1;i<5;i++)
    {	
		if(max<*(a+i))
		  max=*(a+i);
		  
		else if(min>*(a+i))
			min=*(a+i);
	}
		printf("max=%d\n",max);
		printf("min=%d\n",min);
	
   system("pause");
   return 0;
}
